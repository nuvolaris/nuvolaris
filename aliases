alias ncu="nuv config use"
function use() {
   if test -z "$1"
   then nuv config use
   else nuv config use "$@"
        nuv debug export F=-
        kubectl config set-context --current --namespace nuvolaris
   fi
}

function origin2ssh {
  HERE="$(basename $PWD)"
  git remote set-url origin "git@github.com:nuvolaris/$HERE"
}

alias nssh="ssh -oStrictHostKeyChecking=no"

